<% content_for :title do %>Dashboard - Florent @ Catalyst<% end %>
<script type='text/javascript'>
  $(function() {
      Dashing.widget_base_dimensions = [320, 350];
      Dashing.numColumns = 3;

      });
</script>
<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
    <div data-id="catalyst"
      data-view="Image"
      data-title="Catalyst"
      data-image="/CatalystSquareLogo_260x260_transparent_whiteBolt.png"
      data-width="250px">
    </div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
    <div data-view="Clock"></div>
    <i class="icon-time icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
    <div data-id="forecast" data-view="Forecast" data-title="Weather Forecast"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="2">
    <div
      data-id="wrs"
      data-view="Wrlist"
      data-unordered="true"
      data-title="Work Requests"
	 data-moreinfo="opened & assigned to you - "
	 data-linktoalllabel="see all requests"
	 >
    </div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
    <div data-id="wrms_daily"
      data-view="Meter"
      data-title="Daily timesheets"
      data-min="0"
	 data-max="8"
	 data-postfix=" hours"
	 data-moreinfo="Go timesheet!"
	 data-moreinfolink="https://wrms.catalyst.net.nz/time_entry.php"
	 ></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
    <div data-id="bbb" data-view="JenkinsBuild" data-title="Broadbandbuy Jenkins" data-description="Broadbandbuy" data-min="0" data-max="100"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
    <div data-id="wrms_weekly"
      data-view="Meter"
      data-title="Weekly timesheets"
      data-min="0"
	 data-max="40"
	 data-postfix=" hours"
	 ></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
    <div
      data-id="redmine"
      data-view="Redmine"
      data-title="Redmine tickets"
      data-moreinfo="opened & assigned to you - "
	 data-linktoall="https://redmine.catalyst.net.nz/issues?assigned_to_id=me&set_filter=1&sort=priority%3Adesc%2Cupdated_on%3Adesc"
	 data-linktoalllabel="see all requests"
	 >
    </div>
    </li>

  </ul>

</div>
